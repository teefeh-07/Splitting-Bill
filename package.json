{
  "name": "billsplit-protocol",
  "version": "2.1.0",
  "description": "A decentralized restaurant bill splitting platform built on the Stacks blockchain, enabling secure and transparent bill sharing among multiple participants",
  "type": "module",
  "private": true,
  "keywords": [
    "stacks",
    "blockchain",
    "clarity",
    "bill-splitting",
    "restaurant",
    "payments",
    "defi",
    "smart-contracts"
  ],
  "homepage": "https://github.com/teefeh-07/Splitting-Bill#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/teefeh-07/Splitting-Bill.git"
  },
  "bugs": {
    "url": "https://github.com/teefeh-07/Splitting-Bill/issues"
  },
  "scripts": {
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "dev": "clarinet console",
    "build": "clarinet check",
    "lint": "clarinet check --format",
    "deploy:devnet": "clarinet deploy --devnet",
    "deploy:testnet": "clarinet deploy --testnet",
    "console": "clarinet console",
    "check": "clarinet check",
    "format": "clarinet check --format",
    "clean": "rm -rf .cache coverage",
    "prepare": "npm run check"
  },
  "author": {
    "name": "Boluwatife Oniyilo",
